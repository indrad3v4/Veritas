# OIDC Configuration
OIDC_ISSUER=https://auth.veritas-demo.eu/realms/uknf
OIDC_CLIENT_ID=veritas-webapp
OIDC_CLIENT_SECRET=your-secret-here
OIDC_REDIRECT_URI=https://veritas-uknf.lovable.app/auth/callback

# DeepSeek AI Configuration
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Frontend URL (Lovable)
FRONTEND_URL=https://veritas-uknf.lovable.app

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Database
DATABASE_URL=sqlite:///./veritas_demo.db

# Development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://veritas-uknf.lovable.app,http://localhost:3000

# Agent Configuration  
AGENT_MAX_ITERATIONS=5
AGENT_TIMEOUT_SECONDS=30
